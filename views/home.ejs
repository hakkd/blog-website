<%- include('partials/header'); -%>

<h1>Home</h1>
<div>
    <p><%=homeContent %></p>
    <% posts.forEach(function(post) { %>
        <h1><%= post.title %></h1>
        <p> 
            <%= post.content.substring(0, Math.min(100, post.content.length)) + "..." %>
            <a href="/posts/<%=post._id%>" +  >Read More</a>
        </p>
        <% }) %>
</div> 

